@model tecno.Models.Factura

@{
    ViewData["Title"] = "Factura";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="mb-4">
                        <h2 class="mb-1 text-muted">TecnoFerre - Factura</h2>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="text-muted">
                                <h5 class="font-size-16 mb-3">Factura a:</h5>
                                <p class="font-size-15 mb-2">@Model.usuario.nombre</p>
                                <p class="mb-1">@Model.usuario.direccion</p>
                                <p class="mb-1"> @Model.usuario.correo</p>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="text-muted text-sm-end">
                                <div>
                                    <h5 class="font-size-15 mb-1"># Factura:</h5>
                                    <p>@Model.nFactura</p>
                                </div>
                                <div class="mt-4">
                                    <h5 class="font-size-15 mb-1">Fecha:</h5>
                                    <p>@Model.fechaEmision.ToString("dd/MM/yyyy")</p>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="py-2">
                        <h5 class="font-size-15">Detalles</h5>

                        <div class="table-responsive">
                            <table class="table align-middle table-nowrap table-centered mb-0">
                                <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th>Precio</th>
                                        <th>Cantidad</th>
                                        <th class="text-end" style="width: 120px;">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.FacturaItems)
                                    {
                                        <tr>
                                            <td>
                                                <div>
                                                    <h5 class="text-truncate font-size-14 mb-1">@item.Producto.nombre</h5>
                                                </div>
                                            </td>
                                            <td>₡@item.Price</td>
                                            <td>@item.Quantity</td>
                                            <td class="text-end">₡@(item.Price * item.Quantity)</td>
                                        </tr>
                                    }

                                    <tr>
                                        <th scope="row" colspan="3" class="text-end">Subtotal</th>
                                        <td class="text-end"> ₡@Model.subtotal</td>
                                    </tr>
                                    <tr>
                                        <th scope="row" colspan="3" class="text-end">Impuesto</th>
                                        <td class="text-end">₡@ViewBag.impuesto</td>
                                    </tr>


                                    <tr>
                                        <th scope="row" colspan="3" class="border-0 text-end">Total</th>
                                        <td class="border-0 text-end"><h4 class="m-0 fw-semibold"> ₡@Model.total</h4></td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                        <div class="d-print-none mt-4">
                            <div class="float-end">
                                <a href="javascript:window.print()" class="btn text-light"><i class="bi bi-printer-fill"></i></a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

