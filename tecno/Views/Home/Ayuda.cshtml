@{
    ViewData["Title"] = "Ayuda";
}

<div class="container mt-5">
    <h3 class="fondo-texto texto-rosa ps-4">Ayuda - TecnoFerre</h3>
    <div class="help-form mt-4">
        <form>
            <div class="mb-3">
                <label for="name" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="name" placeholder="Ingresa tu nombre">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Correo Electrónico</label>
                <input type="email" class="form-control" id="email" placeholder="Ingresa tu correo electrónico">
            </div>
            <div class="mb-3">
                <label for="subject" class="form-label">Tema de la Consulta</label>
                <input type="text" class="form-control" id="subject" placeholder="Ingresa el tema de tu consulta">
            </div>
            <div class="mb-3">
                <label for="message" class="form-label">Mensaje</label>
                <textarea class="form-control" id="message" rows="5" placeholder="Ingresa tu mensaje"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>
</div>
