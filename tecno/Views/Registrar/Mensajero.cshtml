@{
    ViewData["Title"] = "Nuevo Mensajero";
}

<div class="card">
    @if (ViewData["MensajeError"] != null)
    {
        <div class="alert alert-danger mb-4" role="alert">
            @ViewData["MensajeError"]
        </div>
    }
    @if (TempData["MensajeExito"] != null)
    {
        <div class="alert alert-success mb-4" role="alert">
            @TempData["MensajeExito"]
        </div>
    }
    <div class="card-header">
        Agregar Mensajero
    </div>
    <div class="card-body">

        <form method="post">

            <div class="mb-2">
                <label class="form-label">Cédula</label>
                <input type="text" id="cedula" name="cedula" class="form-control form-control-sm" required />
            </div>
            <div class="mb-2">
                <label class="form-label">Nombre</label>
                <input type="text" id="nombre" name="nombre" class="form-control form-control-sm" required />
            </div>
            <div class="mb-2">
                <label class="form-label">Correo</label>
                <input type="email" id="correo" name="correo" class="form-control form-control-sm" required></input>
            </div>
            <div class="mb-2">
                <label class="form-label">Contraseña</label>
                <input type="password" id="contrasena" name="contrasena" class="form-control form-control-sm" required />
            </div>
            <div class="mb-2">
                <label class="form-label">Confirmar contraseña</label>
                <input type="password" id="confirmarContrasena" name="confirmarContrasena" class="form-control form-control-sm" required />
            </div>
            <button type="submit" class="btn btn-sm">Guardar Cambios</button>
            <a asp-action="Admin" asp-controller="Producto" class="btn btn-sm">Volver</a>
        </form>




    </div>

</div>
