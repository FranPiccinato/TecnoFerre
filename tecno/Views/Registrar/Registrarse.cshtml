@{
    ViewData["Title"] = "Nuevo usuario";
}
<div class="container d-flex align-items-center justify-content-center">
    <div class="col-xl-11">
        <div class="card" style="border-radius: 30px;">
            <div class="row g-0">
                <div class="col-lg-5 d-none d-md-block">
                    <img src="~/images/imagenRegistrarse.jpg" class="img-fluid" style="border-radius: 25px 0 0 25px;" alt="">
                </div>
                <div class="col-lg-7 d-flex align-items-center justify-content-center">
                    <div class="card-body px-5  my-3">
                        @if (ViewData["MensajeError"] != null)
                        {
                            <div class="alert alert-danger mb-4" role="alert">
                                @ViewData["MensajeError"]
                            </div>
                        }
                        <form method="POST">
                            <h3 class="mb-3 pb-3 text-center fw-bolder" style="letter-spacing: 1px;">Crear un nuevo usuario</h3>
                            <div class="mb-4 text-start">
                                <input type="text" id="cedula" name="cedula" class="form-control form-control" placeholder="Cédula" required/>
                            </div>
                            <div class="mb-4 text-start">
                                <input type="text" id="nombre" name="nombre" class="form-control form-control" placeholder="Nombre" required />
                            </div>
                            <div class="mb-4">
                                <input type="email" id="correo" name="correo" class="form-control form-control" placeholder="Correo" required />
                            </div>

                            <div class="mb-4">
                                <input type="password" id="contrasena" name="contrasena" class="form-control form-control" placeholder="Contraseña" required />
                            </div>

                            <div class="mb-4">
                                <input type="password" id="confirmarContrasena" name="confirmarContrasena" class="form-control form-control" placeholder="Confirmar contraseña" required />
                            </div>

                            <div class="mb-4">
                                <textarea id="direccion" name="direccion" class="form-control form-control" placeholder="Dirección" required></textarea>
                            </div>

                            <div class="pt-4 mb-4 text-center">
                                <button id="btnIniciar" class="btn" type="submit">Registrarse</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
